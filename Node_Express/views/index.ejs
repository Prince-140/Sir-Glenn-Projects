        // Dynamic Appliance Management
        class ApplianceManager {
            constructor() {
                this.applianceCounter = 0;
                this.applianceGrid = document.getElementById('appliance-grid');
                this.addButton = document.getElementById('add-appliance-btn');
                this.modal = document.getElementById('add-appliance-modal');
                this.form = document.getElementById('appliance-form');
                this.template = document.getElementById('appliance-template');
                
                this.initEventListeners();
                this.loadAppliancesFromStorage();
            }
            
            initEventListeners() {
                // Add button click
                this.addButton.addEventListener('click', () => this.showModal());
                
                // Modal close buttons
                document.getElementById('close-modal').addEventListener('click', () => this.hideModal());
                document.getElementById('cancel-modal').addEventListener('click', () => this.hideModal());
                
                // Modal overlay click
                this.modal.addEventListener('click', (e) => {
                    if (e.target === this.modal) {
                        this.hideModal();
                    }
                });
                
                // Form submission
                this.form.addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.createAppliance();
                });
                
                // Appliance grid delegated events
                this.applianceGrid.addEventListener('click', (e) => {
                    // Delete button
                    if (e.target.closest('.delete-appliance-btn')) {
                        const card = e.target.closest('.appliance-card');
                        if (card && confirm('Are you sure you want to delete this appliance?')) {
                            this.deleteAppliance(card);
                        }
                    }
                    
                    // Toggle switch
                    if (e.target.type === 'checkbox') {
                        this.handleToggleSwitch(e.target);
                    }
                });
            }
            
            showModal() {
                this.modal.classList.add('active');
                document.getElementById('appliance-name').focus();
            }
            
            hideModal() {
                this.modal.classList.remove('active');
                this.form.reset();
            }
            
            createAppliance() {
                const name = document.getElementById('appliance-name').value.trim();
                const type = document.getElementById('appliance-type').value;
                const power = parseInt(document.getElementById('appliance-power').value) || 100;
                
                // Map type to icon
                const iconMap = {
                    'light': 'fa-lightbulb',
                    'fan': 'fa-fan',
                    'Charger': 'fa-plug',
                    'tv': 'fa-tv',
                    'ac': 'fa-snowflake',
                    'heater': 'fa-fire',
                    'computer': 'fa-laptop',
                    'refrigerator': 'fa-blender',
                    'other': 'fa-plug'
                };
                
                const icon = iconMap[type] || 'fa-plug';
                
                if (!name) {
                    alert('Please enter an appliance name');
                    return;
                }
                
                // Create new appliance card
                const card = this.createApplianceCard(name, icon, power);
                this.applianceGrid.appendChild(card);
                
                // Hide modal and reset form
                this.hideModal();
                
                // Animate new card
                card.classList.add('animate-item');
                setTimeout(() => {
                    card.classList.add('show');
                }, 50);
                
                // Update donut chart
                renderApplianceDonut();
                
                // Add to activity logs
                this.addToActivityLog(name, 'added');
                
                // Save to localStorage
                this.saveAppliancesToStorage();
            }
            
            createApplianceCard(name, icon, power, isOn = false) {
                const template = this.template.content.cloneNode(true);
                const card = template.querySelector('.appliance-card');
                const cardId = `appliance-${Date.now()}-${this.applianceCounter++}`;
                
                // Set unique ID
                card.dataset.id = cardId;
                
                // Set appliance name
                card.querySelector('.appliance-name').textContent = name;
                
                // Set icon
                const iconElement = card.querySelector('.appliance-icon i');
                iconElement.className = `fas ${icon}`;
                
                // Set toggle state
                const toggle = card.querySelector('input[type="checkbox"]');
                toggle.checked = isOn;
                toggle.id = `toggle-${cardId}`;
                
                // Set status
                const statusBadge = card.querySelector('.status-badge');
                if (isOn) {
                    statusBadge.textContent = 'ON';
                    statusBadge.className = 'status-badge status-on';
                    card.querySelector('.power-value').textContent = `${power}W`;
                } else {
                    statusBadge.textContent = 'OFF';
                    statusBadge.className = 'status-badge status-off';
                    card.querySelector('.power-value').textContent = '0W';
                }
                
                // Store power value in data attribute for toggle functionality
                card.dataset.power = power;
                
                return card;
            }
            
            deleteAppliance(card) {
                const name = card.querySelector('.appliance-name').textContent;
                
                // Add to activity logs
                this.addToActivityLog(name, 'removed');
                
                // Remove card with animation
                card.style.transform = 'scale(0.8)';
                card.style.opacity = '0';
                
                setTimeout(() => {
                    card.remove();
                    this.saveAppliancesToStorage();
                    renderApplianceDonut();
                }, 300);
            }
            
            handleToggleSwitch(toggle) {
                const card = toggle.closest('.appliance-card');
                const statusBadge = card.querySelector('.status-badge');
                const powerValue = card.querySelector('.power-value');
                const power = parseInt(card.dataset.power) || 100;
                const name = card.querySelector('.appliance-name').textContent;
                
                if (toggle.checked) {
                    statusBadge.textContent = 'ON';
                    statusBadge.className = 'status-badge status-on';
                    powerValue.textContent = `${power}W`;
                    this.addToActivityLog(name, 'turned ON');
                } else {
                    statusBadge.textContent = 'OFF';
                    statusBadge.className = 'status-badge status-off';
                    powerValue.textContent = '0W';
                    this.addToActivityLog(name, 'turned OFF');
                }
                
                this.saveAppliancesToStorage();
                renderApplianceDonut();
            }
            
            saveAppliancesToStorage() {
                const appliances = [];
                const cards = this.applianceGrid.querySelectorAll('.appliance-card');
                
                cards.forEach(card => {
                    const name = card.querySelector('.appliance-name').textContent;
                    const icon = card.querySelector('.appliance-icon i').className;
                    const isOn = card.querySelector('input[type="checkbox"]').checked;
                    const power = parseInt(card.dataset.power) || 100;
                    
                    appliances.push({
                        name,
                        icon: icon.replace('fas ', ''),
                        isOn,
                        power
                    });
                });
                
                try {
                    localStorage.setItem('smartHomeAppliances', JSON.stringify(appliances));
                } catch (e) {
                    console.error('Failed to save appliances to localStorage:', e);
                }
            }
            
            loadAppliancesFromStorage() {
                try {
                    const saved = localStorage.getItem('smartHomeAppliances');
                    if (saved) {
                        const appliances = JSON.parse(saved);
                        appliances.forEach(appliance => {
                            const card = this.createApplianceCard(
                                appliance.name,
                                appliance.icon,
                                appliance.power,
                                appliance.isOn
                            );
                            this.applianceGrid.appendChild(card);
                        });
                    }
                } catch (e) {
                    console.error('Failed to load appliances from localStorage:', e);
                }
            }
            
            addToActivityLog(applianceName, action) {
                // In a real app, you would add this to the activity log table
                console.log(`Activity: ${applianceName} ${action} at ${new Date().toLocaleTimeString()}`);
                
                // For demo purposes, show a notification
                const notification = document.createElement('div');
                notification.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: linear-gradient(135deg, #52acbc, #4CAF50);
